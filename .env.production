# Production Environment Configuration
# Copy this file to .env.production and update values

# Database Configuration (Replace with your production database)
DATABASE_URL="postgresql://username:password@production-host:5432/ayutrace_prod"

# JWT Configuration
JWT_SECRET="your-super-secure-jwt-secret-key-for-production-change-this"
JWT_EXPIRES_IN="24h"

# Server Configuration
PORT=3000
NODE_ENV="production"

# Security Configuration
CORS_ORIGIN="https://yourdomain.com"
RATE_LIMIT_WINDOW="15"
RATE_LIMIT_MAX="100"

# File Upload Configuration
MAX_FILE_SIZE="10MB"
UPLOAD_PATH="./uploads"

# Optional: Blockchain Configuration
FABRIC_MSP_ID="Org1MSP"
FABRIC_USER_ID="admin"
FABRIC_CHANNEL_NAME="ayutrace-channel"

# Database Connection Pool
DATABASE_MAX_CONNECTIONS="10"
DATABASE_CONNECTION_TIMEOUT="20000"